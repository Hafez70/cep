				<Geometry>
					<Size>
						<Height>560</Height>
						<Width>450</Width>
					</Size>
					<MinSize>
						<Height>559</Height>
						<Width>449</Width>
					</MinSize>
					<MaxSize>
						<Height>600</Height>
						<Width>500</Width>
					</MaxSize>
					
				</Geometry>

			</UI>
		</DispatchInfo>
	</Extension>
</DispatchInfoList>
</ExtensionManifest>
